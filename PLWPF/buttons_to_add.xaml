<UserControl x:Class="PLWPF.buttons_to_add"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PLWPF"
             mc:Ignorable="d" 
             d:DesignHeight="500" d:DesignWidth="150"  FontFamily="Segoe UI Semibold">
    <StackPanel>
        <TextBlock TextWrapping="Wrap" TextAlignment="Center"><Run Text="press the following "/><LineBreak/><Run Text="you want to add"/></TextBlock>

        <Grid Height="470">
            <Grid.RowDefinitions>
              <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
              <RowDefinition/>
            </Grid.RowDefinitions>
            <Button x:Name="mother" Content="Mother" Grid.Row="0" Margin="10" Click="mother_Click"  Style="{StaticResource ButtonStyle1}"  />
            <Button x:Name="child"  Content="Child" Grid.Row="1" Margin="10" Click="child_Click" Style="{StaticResource ButtonStyle1}"/>
            <Button x:Name="nanny"  Content="Nanny" Grid.Row="2" Margin="10" Click="nanny_Click" Style="{StaticResource ButtonStyle1}"/>
            <Button x:Name="contract" Content="Contract" Grid.Row="3" Margin="10" Click="contract_Click" Style="{StaticResource ButtonStyle1}"/>

        </Grid>
    </StackPanel>
</UserControl>
