<UserControl x:Class="PLWPF.UpDownControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PLWPF"
             mc:Ignorable="d" x:Name="myUC">



    <StackPanel Orientation="Horizontal" Width="50" >
        <Button x:Name="cmdDown" Margin="1" Content="˅" Click="cmdDown_Click" />

        <TextBox x:Name="textNumber" Margin="1" Width="21" TextAlignment="Center" Text="{Binding ElementName=myUC, Path=MyText, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" TextChanged="txtNum_TextChanged" />
        <Button x:Name="cmdUp" Margin="1" Content="˄" Click="cmdUp_Click" />

      </StackPanel>

</UserControl>
